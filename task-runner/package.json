{
  "name": "lionheart-task-runner",
  "version": "1.0.0",
  "description": "LH&Creatives Inc. Task runner",
  "main": "index.js",
  "config": {
    "base": "sample",
    "sass": "sample/cms/scss,sample/data/scss"
  },
  "scripts": {
    "build": "tsc",
    "watch": "node dist/watch/sass.js",
    "build:scss": "node dist/build/sass.js",
    "optimize:image": "node dist/build/image.js 'sample/data/img/**/*.{jpg,jpeg,png,svg}'",
    "convert:webp": "node dist/build/convert.js 'sample/data/img/**/*.{jpg,png}'",
    "test": "npx ts-node src/index.ts",
    "ts:watch": "ts-node -r tsconfig-paths/register src/watch/sass.ts",
    "ts:build:scss": "ts-node -r tsconfig-paths/register src/build/sass.ts",
    "ts:optimize:image": "ts-node -r tsconfig-paths/register src/build/image.ts 'sample/data/img/**/*.{jpg,jpeg,png,svg}'",
    "ts:convert:webp": "ts-node -r tsconfig-paths/register src/build/convert.ts 'sample/data/img/**/*.{jpg,png}'"
  },
  "author": "SUSH",
  "license": "ISC",
  "devDependencies": {
    "@namics/stylelint-bem": "^6.3.1",
    "@types/autoprefixer": "^9.7.2",
    "@types/fb-watchman": "^2.0.0",
    "@types/fs-extra": "^9.0.1",
    "@types/glob": "^7.1.3",
    "@types/glob-base": "^0.3.0",
    "@types/imagemin": "^7.0.0",
    "@types/imagemin-mozjpeg": "^8.0.0",
    "@types/imagemin-optipng": "^5.2.0",
    "@types/imagemin-svgo": "^7.0.0",
    "@types/node": "^14.6.4",
    "@types/node-notifier": "^6.0.1",
    "@types/sass": "^1.16.0",
    "@types/sass-graph": "^2.1.2",
    "@types/sharp": "^0.25.1",
    "@types/stylelint": "^9.10.1",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "autoprefixer": "^9.8.6",
    "chalk": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "fb-watchman": "^2.0.1",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "glob-base": "^0.3.0",
    "imagemin": "^7.0.1",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^8.0.0",
    "node-notifier": "^8.0.0",
    "postcss": "^7.0.32",
    "prettier": "^2.1.1",
    "sass": "^1.26.10",
    "sass-graph": "^3.0.5",
    "sharp": "^0.26.0",
    "stylelint": "^13.7.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-selector-tag-no-without-class": "^2.0.3",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "sanitize.css": "^12.0.1"
  }
}
